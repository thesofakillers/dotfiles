# Define colors
LIGHTGRAY="\033[0;37m"
WHITE="\033[1;37m"
BLACK="\033[0;30m"
DARKGRAY="\033[1;30m"
RED="\033[0;31m"
LIGHTRED="\033[1;31m"
GREEN="\033[0;32m"
LIGHTGREEN="\033[1;32m"
BROWN="\033[0;33m"
YELLOW="\033[1;33m"
BLUE="\033[0;34m"
LIGHTBLUE="\033[1;34m"
MAGENTA="\033[0;35m"
LIGHTMAGENTA="\033[1;35m"
CYAN="\033[0;36m"
LIGHTCYAN="\033[1;36m"
NOCOLOR="\033[0m"


PS1=""
# Current directory
PS1+="\[${GREEN}\]\u\[${WHITE}\] in \[${BROWN}\]\W"

# Skip to the next line
PS1+="\n"

if [[ $EUID -ne 0 ]]; then
	PS1+="\[${GREEN}\]>\[${NOCOLOR}\] " # Normal user
else
	PS1+="\[${RED}\]>\[${NOCOLOR}\] " # Root user
fi

export CLICOLOR=1

unameOut="$(uname -s)"
case "${unameOut}" in
    Linux*)     machine=Linux;;
    Darwin*)    machine=Mac;;
    CYGWIN*)    machine=Cygwin;;
    MINGW*)     machine=MinGw;;
    *)          machine="UNKNOWN:${unameOut}"
esac

if [[ "$machine" == "Mac" ]]; then
  export LSCOLORS=exfxfeaeBxxehehbadacea
else
  export LS_COLORS='di=34:ln=35:so=35;44:pi=30;44:ex=1;31:bd=0;44:cd=37;44:su=37;41:sg=30;43:tw=30;42:ow=34;40'
fi
