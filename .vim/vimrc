if has('nvim')
"coc settings {{{
" pin node used by coc to avoid EPIPE when PATH differs (GUI launches etc.)
if executable(expand('~/n/bin/node'))
  let g:coc_node_path = expand('~/n/bin/node')
endif
" language options{{{
" python interpreter selection {{{
" Pin to dedicated venv to avoid touching system python
if filereadable(expand('~/.local/share/nvim-py3/bin/python'))
  let g:python3_host_prog = expand('~/.local/share/nvim-py3/bin/python')
  call coc#config('python', {'pythonPath': g:python3_host_prog})
else
  echohl WarningMsg
  echom "pynvim host missing: run 'python3 -m venv ~/.local/share/nvim-py3 && ~/.local/share/nvim-py3/bin/pip install -U pynvim'"
  echohl None
endif
" }}}
