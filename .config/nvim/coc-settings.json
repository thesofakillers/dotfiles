{
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "python": "flake8"
  },
  "diagnostic-languageserver.linters": {
    "flake8": {
      "sourceName": "flake8",
      "command": "flake8",
      "debounce": 200,
      "rootPatterns": [".git", "pyproject.toml", "setup.py"],
      "args": [
        "--ignore=E402,C901,W503,W504,E116,E702,C0103,C0114,C0115,C0116,C0103,C0301,W0613,W0102,R0903,R0902,R0914,R0915,R0205,W0703,W0702,W0603",
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "formatLines": 1,
      "formatPattern": [
        "(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "W": "info",
        "E": "warning",
        "F": "info",
        "C": "info",
        "N": "hint"
      }
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "python": "black"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    },
    "black": {
      "command": "black",
      "args": ["--quiet", "-"]
    }
  },
  "coc.preferences.colorSupport": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.suggest.completeFunctionCalls": true,
  "javascript.suggest.completeFunctionCalls": true,
  "json.format.enable": true,
  "eslint.autoFixOnSave": true,
  "prettier.disableSuccessMessage": true,
  "prettier.proseWrap": "always",
  "suggest.noselect": false,
  "snippets.extends": {
    "cpp": ["c"],
    "javascript": ["html", "javascriptreact"],
    "javascriptreact": ["javascript", "typescriptreact"],
    "typescript": ["javascript"],
    "markdown": ["tex"]
  },
  "snippets.loadFromExtensions": true,
  "coc.preferences.extensionUpdateCheck": "daily"
}
